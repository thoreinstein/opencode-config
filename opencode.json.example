{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-0-20250514",
  "theme": "rosepine",
  "autoupdate": true,
  "mcp": {
    "applemusic": {
      "type": "local",
      "command": ["uvx", "-p", "3.13", "-n", "mcp-applemusic"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "stripe": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "-e", "STRIPE_SECRET_KEY", "mcp/stripe", "--tools=all"],
      "environment": {
        "STRIPE_SECRET_KEY": "{env:STRIPE_SECRET_KEY}"
      }
    },
    "supabase": {
      "type": "remote",
      "url": "https://mcp.supabase.com/mcp"
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      }
    },
    "trello": {
      "type": "local",
      "command": ["npx", "@delorenj/mcp-server-trello"],
      "environment": {
        "TRELLO_API_KEY": "{env:TRELLO_API_KEY}",
        "TRELLO_TOKEN": "{env:TRELLO_TOKEN}"
      }
    }
  },
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "allow"
  },
  "agent": {
    "build": {
      "description": "Default coding agent with full tool access",
