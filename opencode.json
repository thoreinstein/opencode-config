{
  "$schema": "https://opencode.ai/config.json",
  "model": "",
  "theme": "rosepine",
  "autoupdate": true,
  "agent": {},
  "plugin": ["opencode-openai-codex-auth@4.1.0"],
  "mcp": {
    "figma": {
      "enabled": true,
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "terraform": {
      "enabled": true,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "TFE_TOKEN",
        "hashicorp/terraform-mcp-server"
      ],
      "environment": {
        "TFE_TOKEN": "{env:TFE_TOKEN}"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "applemusic": {
      "type": "local",
      "command": ["uvx", "-p", "3.13", "-n", "mcp-applemusic"]
    },
    "playwright": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/playwright"]
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "time": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/time"]
    },
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/sequentialthinking"]
    },
    "obsidian": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "OBSIDIAN_HOST",
        "-e",
        "OBSIDIAN_API_KEY",
        "mcp/obsidian"
      ],
      "environment": {
        "OBSIDIAN_HOST": "host.docker.internal",
        "OBSIDIAN_API_KEY": "{env:OBSIDIAN_API_KEY}"
      }
    },
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/myers/.local/state/memory_mcp:/app/dist",
        "mcp/memory"
      ]
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  }
}
