{
  "$schema": "https://opencode.ai/config.json",
  "model": "{env:OPENCODE_MODEL}",
  "small_model": "{env:OPENCODE_SMALL_MODEL}",
  "agent": {
    "build": {
      "model": "anthropic/claude-sonnet-4-5"
    },
    "plan": {
      "model": "github-copilot/gpt-5.1-codex-max"
    }
  },
  "theme": "rosepine",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@tarquinen/opencode-smart-title",
    "@simonwjackson/opencode-direnv",
    "@howaboua/opencode-roadmap-plugin",
    "@franlol/opencode-md-table-formatter",
    "opencode-skills"
  ],
  "default_agent": "plan",
  "share": "disabled",
  "autoupdate": false,
  "keybinds": {
    "leader": "ctrl+b"
  },
  "tui": {
    "scroll_acceeleration": {
      "enabled": true
    }
  },
  "mcp": {
    "figma": {
      "enabled": true,
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "playwright": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/playwright"]
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa",
      "enabled": true
    },
    "time": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/time"]
    },
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "{env:HOME}/.local/state/memory:/data",
        "mcp/memory"
      ],
      "enabled": true
    },
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/sequentialthinking"]
    },
    "obsidian": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "OBSIDIAN_HOST",
        "-e",
        "OBSIDIAN_API_KEY",
        "mcp/obsidian"
      ],
      "environment": {
        "OBSIDIAN_HOST": "host.docker.internal",
        "OBSIDIAN_API_KEY": "{env:OBSIDIAN_API_KEY}"
      }
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "instructions": [
    "AGENTS.md",
    "CONTRIBUTING.md",
    "LLM_INSTRUCTIONS.md",
    "docs/*.md"
  ]
}
